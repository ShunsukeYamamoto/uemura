.admin-container
  %h1 お知らせ一覧
  - if Notice.exists?
    - @notices.each do |n|
      %table.admin-notice-table
        %tr.admin-each-notice
          %td #{n.title}
          %td #{n.created_at}
          %td.admin-each-notice-btn
            =link_to "編集",edit_notice_path(n), class:'sub-button'
          %td.admin-each-notice-btn
            =link_to "削除",notice_path(n),method: :delete, class:'sub-button'
  - else 
    %p 投稿はありません

= render "shared/admin_nav"